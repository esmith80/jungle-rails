<div class="col-sm-6 col-sm-offset-1">
  <h1>Login</h1>
<%= form_tag '/login' do %>

  <div class="form-group">
    Email: <%= text_field_tag :email, "e@e.com", class: 'form-control' %>
  </div>
  
  <div class="form-group">
    Password: <%= password_field_tag :password, "e", class: 'form-control' %>
  </div>

  <%= submit_tag "Submit", class: 'btn btn-primary' %>

  <% end %>
</div>
